<div class="S0-page" data-label="{{ localize 'S0.Equipamentos' }}" data-icon="fas fa-backpack">
    <div class="S0-container-2-column" style="height: 304px; max-height: 304px;">
        <div class="S0-container" style="overflow: auto;">
            <h3> {{localize 'S0.Equipados'}} </h3>
            <hr>
            <ul id="equipped-{{actor.id}}" class="S0-container-2-column S0-drop-container" style="row-gap: 6px; grid-template-columns: repeat(auto-fit, minmax(45%, 1fr));">
                {{#each (actorLists actor 'equipment-equipped') as |item|}}
                <li class="S0-item-bag-compact">{{> equipamentEquippedItem item }}</li>
                {{/each}}
            </ul>
        </div>

        <div class="S0-container" style="overflow: auto;">
            <h3> {{localize 'S0.Mochila'}} </h3>
            <hr>
            <ul id="bag-{{actor.id}}" class="S0-container-2-column S0-drop-container" style="row-gap: 6px; grid-template-columns: repeat(auto-fit, minmax(45%, 1fr));">
                {{#each (actorLists actor 'equipment-filtered') as |item|}}
                <li class="S0-item-bag-compact">{{> equipamentBagItem item }}</li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>