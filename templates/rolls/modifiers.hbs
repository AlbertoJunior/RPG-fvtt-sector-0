<form class="S0-container">
    <h3 style="margin-block: 3px">{{localize 'S0.Modificadores'}}</h3>
    <div class="form-group">
        <label for="{{uuid}}.difficulty" style="flex:1;">{{localize 'S0.Dificuldade'}}:</label>
        <select class="S0-select" id="{{uuid}}.difficulty" name="difficulty" style="flex:1">
            {{#forLoop 5 11}}
            <option value="{{index}}" {{selectIfEq index 6}}>{{index}}</option>
            {{/forLoop}}
        </select>
    </div>

    <div class="form-group">
        <label for="{{uuid}}.critic" style="flex:1;">{{localize 'S0.Critico'}}:</label>
        <select class="S0-select" id="{{uuid}}.critic" name="critic" style="flex:1">
            {{#forLoop 5 11}}
            <option value="{{index}}" {{selectIfEq index 10}}>{{index}}</option>
            {{/forLoop}}
        </select>
    </div>

    {{#if canBeOverload}}
    <div class="form-group">
        <label for="{{uuid}}.overload" style="flex:1;">{{localize 'S0.Sobrecarga'}}:</label>
        <input id="{{uuid}}.overload" name="overload" type="number" style="flex:1;" value="0" max="5" min="0">
    </div>
    {{/if}}

    {{#if canBePenalty}}
    <div class="form-group">
        <label for="{{uuid}}.penalty" style="flex:1;">{{localize 'S0.Penalidade'}}:</label>
        <input id="{{uuid}}.penalty" name="penalty" type="number" style="flex:1;" value="0" min="0">
    </div>
    {{/if}}

    <div class="form-group">
        <label for="{{uuid}}.bonus" style="flex:1;">{{localize 'S0.Bonus'}}:</label>
        <input id="{{uuid}}.bonus" name="bonus" type="number" style="flex:1;" value="0">
    </div>

    <div class="form-group">
        <label for="{{uuid}}.automatic" style="flex:1;">{{localize 'S0.Automatico'}}:</label>
        <input id="{{uuid}}.automatic" name="automatic" type="number" style="flex:1;" value="0" min="0">
    </div>

    {{#if (operators 'or' canBeHalf canBeSpecialist)}}
    <div class="form-group">
        {{#if canBeHalf}}
        <div style="display: flex; flex: 1; align-items: center; justify-content: space-between;">
            <label for="{{uuid}}.isHalf" style="flex:1;">{{localize 'S0.Dividido'}}:</label>
            <input id="{{uuid}}.isHalf" name="half" type="checkbox">
        </div>
        {{/if}}

        {{#if canBeSpecialist}}
        <div style="display: flex; flex: 1; align-items: center; justify-content: space-between;">
            <label for="{{uuid}}.specialist" style="flex:1;">{{localize 'S0.Especialista'}}:</label>
            <input id="{{uuid}}.specialist" name="specialist" type="checkbox">
        </div>
        {{/if}}
    </div>
    {{/if}}

    <hr>

    {{> roll-chat-mode}}
</form>