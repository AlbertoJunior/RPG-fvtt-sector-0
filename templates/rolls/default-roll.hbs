<form class="S0-dialog">
    <div class="S0-container">
        <h3>{{localize 'S0.Atributos'}}</h3>
        <div class="form-group">
            <select class="S0-select" id="attr1" style="margin-inline: 4px">
                {{#each attributes}}
                <option value="{{value}}">{{label}}</option>
                {{/each}}
            </select>

            <select class="S0-select" id="attr2" style="margin-inline: 4px">
                {{#each attributes}}
                <option value="{{value}}">{{label}}</option>
                {{/each}}
            </select>
        </div>

        <h3 style="margin-top:10px">{{localize 'S0.Habilidade'}}</h3>
        <div class="form-group">
            <select class="S0-select" id="ability" style="flex:1;">
                {{#each abilities}}
                <option value="{{value}}">{{label}}</option>
                {{/each}}
            </select>
            <div style="display: flex; flex: 1; align-items: center; justify-content: space-between;">
                <label for="specialist" style="flex:1;">{{localize 'S0.Especialista'}}:</label>
                <input id="specialist" type="checkbox">
            </div>
        </div>

        <h3 style="margin-top: 10px">{{localize 'S0.Outros'}}</h3>
        <div class="form-group">
            <label for="difficulty" style="flex:1;">{{localize 'S0.Dificuldade'}}:</label>
            <select class="S0-select" id="difficulty" style="flex:1">
                {{#each difficulty}}
                <option value="{{value}}" {{#if isDefault}}selected{{/if}}>{{label}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="bonus" style="flex:1;">{{localize 'S0.Bonus'}}:</label>
            <input id="bonus" type="number" style="flex:1;" value="0">
            <label for="automatic" style="flex:1;">{{localize 'S0.Automatico'}}:</label>
            <input id="automatic" type="number" style="flex:1;" value="0">
        </div>

        <hr>

        <div class="form-group">
            <label for="chat_select" style="flex:1;">{{localize 'S0.Enviar_No_Chat'}}:</label>
            <select id="chat_select" class="S0-select" style="flex:1; text-align: start;">
                <option value="publicroll" selected="">{{localize 'S0.Rolagem_Publica'}}</option>
                <option value="gmroll">{{localize 'S0.Rolagem_Privada_GM'}}</option>
                <option value="blindroll">{{localize 'S0.Rolagem_GM_Oculta'}}</option>
                {{#if isGM}}
                <optgroup label="{{localize 'S0.Rolagens_GM'}}">
                    <option value="selfroll">{{localize 'S0.Rolagem_Pessoal'}}</option>
                </optgroup>
                {{/if}}
            </select>
        </div>
    </div>
</form>