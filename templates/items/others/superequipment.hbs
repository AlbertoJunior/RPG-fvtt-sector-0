<div id="{{item.id}}.superequipment"
    class="S0-page S0-container S0-superequipment-container {{#unless item.system.super_equipment}}S0-superequipment-contracted{{/unless}}">
    <div style="display: flex; align-items: center;">
        <h4> {{localize 'S0.SuperEquipamentos'}}</h4>
        <input type="checkbox" data-action="check" data-characteristic="characteristic" data-type="superequipment" {{#if
            item.system.super_equipment}}checked{{/if}}>
    </div>

    <div class="S0-characteristic-container" style="padding-inline: 15px;">
        <label>
            {{localize 'S0.Nivel'}}
        </label>

        {{#forLoop 0 5}}
        <div class="S0-characteristic {{#if ../editable}}S0-clickable{{/if}} {{#if (operators 'gt' (itemValues ../item 'superequipment_level') index)}}S0-selected{{/if}}"
            data-action="check" data-characteristic="characteristic" data-type="level">
        </div>
        {{/forLoop}}
    </div>

    <hr style="margin: 0px;">

    <div style="padding: 4px;">
        <h4>
            {{localize 'S0.Itens.Efeitos'}}

            {{#if editable}}
            <label style="font-size: var(--font-size-11);">
                {{itemValues this 'superequipment_effects_limit'}}
            </label>
            <a class="S0-icon-expand" data-characteristic="superequipment" data-subcharacteristic="trait"
                data-action="add" data-type="good" title="Adicionar">
                <i class="fas fa-square-plus"></i>
            </a>
            {{/if}}
        </h4>
        <ul>
            {{#each item.system.super_equipment.effects}}
            <li
                style="height: 35px; display: flex; align-items: center; margin-block: 2px; padding-block: 8px; border-bottom: 1px solid var(--secondary-color);">
                <label style="flex: 1; font-size: var(--font-size-12);">{{name}}</label>

                {{#if ../editable}}
                <div class="S0-menu-float-wrapper">
                    <a>
                        <i class="fas fa-ellipsis-h"></i>
                    </a>

                    <div class="S0-menu-float">
                        <a class="S0-icon-expand" data-characteristic="superequipment" data-subcharacteristic="trait"
                            data-action="edit" data-item-id="{{id}}" title="Editar">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="S0-icon-expand" data-characteristic="superequipment" data-subcharacteristic="trait"
                            data-action="remove" data-item-id="{{id}}" title="Remover">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
                {{/if}}
            </li>
            {{/each}}
        </ul>

        <h4 style="margin-top: 10px;">
            {{localize 'S0.Itens.Defeitos'}}

            {{#if editable}}
            <label
                style="font-size: var(--font-size-11); width: calc(100% - 30px); overflow: hidden; text-overflow: ellipsis; white-space: nowrap; text-wrap: nowrap;">
                {{itemValues this 'superequipment_defects_limit'}}
            </label>
            <a class="S0-icon-expand" data-characteristic="superequipment" data-subcharacteristic="trait"
                data-action="add" data-type="bad" title="Adicionar">
                <i class="fas fa-square-plus"></i>
            </a>
            {{/if}}
        </h4>

        <ul>
            {{#each item.system.super_equipment.defects}}
            <li
                style="height: 35px; display: flex; align-items: center; margin-block: 2px; padding-block: 8px; border-bottom: 1px solid var(--secondary-color);">
                <label style="flex: 1; font-size: var(--font-size-12);">{{name}}</label>

                {{#if ../editable}}
                <div class="S0-menu-float-wrapper">
                    <a>
                        <i class="fas fa-ellipsis-h"></i>
                    </a>

                    <div class="S0-menu-float">
                        <a class="S0-icon-expand" data-characteristic="superequipment" data-subcharacteristic="trait"
                            data-action="edit" data-item-id="{{id}}" title="Editar">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="S0-icon-expand" data-characteristic="superequipment" data-subcharacteristic="trait"
                            data-action="remove" data-item-id="{{id}}" title="Remover">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
                {{/if}}
            </li>
            {{/each}}
        </ul>
    </div>
</div>