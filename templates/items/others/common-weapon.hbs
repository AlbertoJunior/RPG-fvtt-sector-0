<div class="form-group">
    <label for="{{item.id}}.damage" style="flex: 1;">{{localize 'S0.Dano'}}:</label>
    <input id="{{item.id}}.damage" style="flex: 1; text-align: center;" type="number" name="system.damage" min="0"
        max="6" value="{{itemValues item 'damage'}}" />
</div>

<div class="form-group">
    <label for="{{item.id}}.true_damage" style="flex: 1;">
        {{localize 'S0.Dano_Automatico'}}:
    </label>
    <input id="{{item.id}}.true_damage" style="flex: 1; text-align: center;" type="number" min="0" max="6"
        name="system.true_damage" value="{{itemValues item 'true_damage'}}" />
</div>

<div class="form-group">
    <label for="{{item.id}}.damage_type" style="flex: 1;">
        {{localize 'S0.Tipo_Dano'}}:
    </label>
    <select id="{{item.id}}.damage_type" class="S0-select" style="flex: 1;" name="system.damage_type">
        {{#with (itemValues item 'damage_type') as |damage_type|}}
        {{#each (fetchRepository 'equipment-damage-type')}}
        <option value="{{id}}" {{selectIfEq damage_type id}}>{{label}}</option>
        {{/each}}
        {{/with}}
    </select>
</div>

<div class="form-group">
    <label for="{{item.id}}.hand" style="flex: 1;">
        {{localize 'S0.Maos'}}:
    </label>
    <select id="{{item.id}}.hand" class="S0-select" style="flex: 1;" name="system.hand">
        {{#with (itemValues item 'hand') as |hand|}}
        {{#each (fetchRepository 'equipment-hand-type')}}
        <option value="{{id}}" {{selectIfEq hand id}}>{{label}}</option>
        {{/each}}
        {{/with}}
    </select>
</div>

<div class="form-group">
    <label for="{{item.id}}.occultability" style="flex: 1;">
        {{localize 'S0.Ocultabilidade'}}:
    </label>
    <select id="{{item.id}}.occultability" class="S0-select" style="flex: 1;" name="system.occultability">
        {{#with (itemValues item 'occultability') as |occultability|}}
        {{#each (fetchRepository 'equipment-occultability')}}
        <option value="{{id}}" {{selectIfEq occultability id}}>{{label}}</option>
        {{/each}}
        {{/with}}
        </option>
    </select>
</div>