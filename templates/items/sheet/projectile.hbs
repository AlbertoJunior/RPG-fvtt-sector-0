<form autocomplete="off">
    {{> itemCommon this}}

    <div class="S0-page S0-container">
        <div class="form-group">
            <label style="flex: 1;">{{localize 'S0.Resistencia'}}:</label>
            <input style="flex: 1;" type="number" name="system.resistance" value="{{system.resistance}}" />
        </div>

        <div class="form-group">
            <label style="flex: 1;">{{localize 'S0.Dano'}}:</label>
            <input style="flex: 1;" type="number" name="system.damage" value="{{system.damage}}" />
        </div>

        <div class="form-group">
            <label style="flex: 1;">{{localize 'S0.Cadencia'}}:</label>
            <input style="flex: 1;" type="number" name="system.cadence" value="{{system.cadence}}" />
        </div>

        <div class="form-group">
            <label style="flex: 1;">{{localize 'S0.Alcance'}}:</label>
            <input style="flex: 1;" type="number" name="system.short_range" value="{{system.short_range}}" />
        </div>

        <div class="form-group">
            <label style="flex: 1;">{{localize 'S0.Especial'}}?</label>
            <input style="flex: 1;" type="checkbox" name="system.special" {{#if system.special}}checked{{/if}} />
        </div>
    </div>

    {{> itemSuperEquipment this}}

    {{> itemRollableTests this}}

    <div class="S0-page S0-container">
        <label for="{{item.id}}.description" style="display: block;">
            {{localize 'S0.Descricao'}}:
        </label>
        <textarea id="{{item.id}}.description" style="resize: none; margin-top: 5px;" name="system.description"
            type="text" maxlength="150" rows="5">{{system.description}}</textarea>
    </div>
</form>