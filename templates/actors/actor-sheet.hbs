<form class="S0-actor-sheet" autocomplete="off">
    {{ log this }}
    <ul id="floating-menu" class="S0-float-right-sheet">
        {{#if canEdit}}
        <li class="S0-simulate-button {{#if editable}}S0-marked{{/if}}" data-characteristic="sheet" data-action="check"
            data-type="edit">
            {{#if editable}}
            <i class="fas fa-toggle-on" style="margin-right: 4px;"></i>
            {{ localize 'S0.Editando' }}
            {{else}}
            <i class="fas fa-toggle-off" style="margin-right: 4px;"></i>
            {{ localize 'S0.Editar' }}
            {{/if}}
        </li>
        <li class="S0-simulate-button" data-characteristic="sheet" data-action="check" data-type="color">
            <i class="fa-solid fa-circle-half-stroke"></i>
            {{localize 'S0.Modo_Escuro'}}
        </li>
        {{/if}}

        {{#if canRoll}}
        <li id="roll-button" class="S0-simulate-button">
            <i class="fas fa-dice-d10" style="margin-right: 4px;"></i>
            {{ localize 'S0.Rolagem' }}
        </li>
        {{/if}}
    </ul>

    <header class="S0-container" style="min-height: 76px;">
        {{#if editable}}
        <h2 class="charname" style="display: flex; align-items: center;">
            <label for="name" style="flex: 1">{{ localize 'S0.Nome' }}:</label>
            <input id="name" name="name" style="margin-left: 6px; padding: 2px 6px" type="text" value="{{actor.name}}"
                placeholder="{{ localize 'S0.Nome' }}" />
        </h2>
        <ul style="columns: 2; padding: 0px; margin: 0px; margin-top: 6px">
            <li style="display: flex; align-items: center;">
                <label for="morfologia" style="flex: 1;">{{ localize 'S0.Morfologia' }}:</label>
                <select class="S0-select" id="morfologia" name="system.morfologia" style="flex: 2;">
                    <option value="androide" {{selectIfEq actor.system.morfologia "androide" }}>
                        {{ localize 'S0.Androide'}}
                    </option>
                    <option value="ciborgue" {{selectIfEq actor.system.morfologia "ciborgue" }}>
                        {{ localize 'S0.Ciborgue'}}
                    </option>
                    <option value="sintetico" {{selectIfEq actor.system.morfologia "sintetico" }}>
                        {{ localize 'S0.Sintetico'}}
                    </option>
                </select>
            </li>

            <li style="display: flex; align-items: center;">
                <label for="bairro" style="flex: 1;">{{ localize 'S0.Bairro' }}:</label>
                <select class="S0-select" id="bairro" name="system.bairro" style="flex: 2;">
                    <option value="alfiran" {{selectIfEq actor.system.bairro "alfiran" }}>Alfiran</option>
                    <option value="ameisen" {{selectIfEq actor.system.bairro "ameisen" }}>Ameisen</option>
                    <option value="aranhas" {{selectIfEq actor.system.bairro "aranhas" }}>Aranhas</option>
                    <option value="ptitsy" {{selectIfEq actor.system.bairro "ptitsy" }}>Ptitsy</option>
                    <option value="tokojirami" {{selectIfEq actor.system.bairro "tokojirami" }}>Tokojirami</option>
                    <option value="vyura" {{selectIfEq actor.system.bairro "vyura" }}>Vyura</option>
                </select>
            </li>
        </ul>
        {{else}}
        <div style="text-align: center; margin-top: 6px">
            <h1>{{actor.name}}</h1>
            <h3 style="display: inline; padding-right: 6px; border-right: 1px solid var(--secondary-color);">
                {{actor.system.morfologia}}
            </h3>
            <h3 style="display: inline; padding-left: 6px; border-left: 1px solid var(--secondary-color);">
                {{actor.system.bairro}}
            </h3>
        </div>
        {{/if}}
    </header>

    {{> "systems/setor0OSubmundo/templates/actors/characteristics.hbs"}}
    {{> "systems/setor0OSubmundo/templates/actors/biography.hbs"}}
    {{> "systems/setor0OSubmundo/templates/actors/enhancement.hbs"}}
    {{> "systems/setor0OSubmundo/templates/actors/equipment.hbs"}}
    {{> "systems/setor0OSubmundo/templates/actors/status.hbs"}}

</form>