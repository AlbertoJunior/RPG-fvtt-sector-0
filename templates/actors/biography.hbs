<section data-label="{{ localize 'S0.Biografia' }}" class="S0-page" data-icon="fas fa-address-book">
    <div class="S0-container" style="position: relative;">
        <h2>{{localize 'S0.Descricao'}}</h2>
        <div style="display: flex; justify-content: center; align-items: center;">
            <img id="actor-image" src="{{actor.img}}" class="{{#if editable}}S0-clickable{{/if}}" data-edit="img">
        </div>

        <div class="S0-biography-container-button">
            <a class="S0-icon-expand" data-action="view" data-characteristic="menu" data-type="actor"
                title="{{localize 'SIDEBAR.CharArt'}}">
                <i class="fas fa-eye"></i>
                <span style="margin-left: 10px;">{{localize 'SIDEBAR.CharArt'}}</span>
            </a>

            <a class="S0-icon-expand" data-action="view" data-characteristic="menu" data-type="token"
                title="{{localize 'SIDEBAR.TokenArt'}}">
                <i class="fas fa-eye"></i>
                <span style="margin-left: 10px;">{{localize 'SIDEBAR.TokenArt'}}</span>
            </a>
        </div>

        <div class="S0-container">
            <label for="biography" style="display: block; margin: 4px">{{ localize 'S0.Biografia' }}</label>
            <input id="biography" name="system.background.biography" type="text"
                value="{{actor.system.background.biography}}" placeholder="{{ localize 'S0.Biografia' }}" />
        </div>
    </div>

    <div class="S0-container">
        <h2> {{localize 'S0.Linguas'}}
            <label style="font-size: var(--font-size-11);">
                {{actorValues actor 'actual_languages'}}/{{actorValues actor 'total_languages'}}
            </label>
        </h2>
        <div id="linguasContainer" class="S0-container-4-column">
            {{#each (fetchRepository 'language')}}
            <div class="S0-characteristic-container" id="{{id}}">
                <label title="{{district}}">
                    {{label}}
                </label>
                <div class="S0-characteristic {{#if ../editable}}S0-clickable{{/if}}" data-action="add"
                    data-characteristic="language">
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <div class="S0-container">
        <h2> {{localize 'S0.Tracos'}} </h2>
        <section id="tracosContainer" class="S0-container-2-column">
            {{> traitPartialContainer traits=actor.system.tracos.bons type="good" title='S0.Tracos-Bons' }}

            {{> traitPartialContainer traits=actor.system.tracos.ruins type="bad" title='S0.Tracos-Ruins' }}
        </section>
    </div>

</section>