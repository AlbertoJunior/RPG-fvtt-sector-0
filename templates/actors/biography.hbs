<section data-label="Biografia" class="S0-page">
    <div style="display: flex; justify-content: center; align-items: center;">
        <img id="actor-image" src="{{actor.img}}" class="{{#if editable}}clickable{{/if}}" data-edit="img">
    </div>

    <label for="biography" style="flex: 1">{{ localize 'S0.Biografia' }}</label>
    <input id="biography" name="system.background.biography" type="text" value="{{actor.system.background.biography}}"
        placeholder="{{ localize 'S0.Biografia' }}" />

    <h2> {{localize 'S0.Linguas'}} </h2>
    <section id="linguasContainer" style="columns: 4;"></section>

    <h2> {{localize 'S0.Tracos'}} </h2>
    <section id="tracosContainer"
        style="display: flex; align-items: flex-start; justify-content: space-between; column-gap: 14px;">
        <div style="flex: 1;">
            <h3 style="text-align: center;"> {{localize 'S0.Tracos-Bons'}}
                {{#if editable}}
                <a style="font-size: small;" data-characteristic="trait" data-action="add" data-type="good">
                    <i class="fas fa-square-plus"></i>
                </a>
                {{/if}}
            </h3>

            <ul id="goodTraitsContainer">
                {{#each actor.system.tracos.bons as |item index|}}
                <li style="display: flex;" data-item-index="{{index}}">
                    <label style="flex: 1;">{{item.name}}</label>
                    {{#if @root.editable}}
                    <a data-action="edit" data-characteristic="trait" data-type="good" style="margin-inline: 4px;">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a data-action="remove" data-characteristic="trait" data-type="good" style="margin-inline: 4px;">
                        <i class="fas fa-trash"></i>
                    </a>
                    {{else}}
                    <a data-action="chat" data-characteristic="trait" data-type="good" style="margin-inline: 4px;">
                        <i class="fas fa-message-quote"></i>
                    </a>
                    <a data-action="view" data-characteristic="trait" data-type="good" style="margin-inline: 4px;">
                        <i class="fas fa-eye"></i>
                    </a>
                    {{/if}}
                </li>
                {{/each}}
            </ul>
        </div>
        <div style="flex: 1;">
            <h3 style="text-align: center;">
                {{localize 'S0.Tracos-Ruins'}}
                {{#if editable}}
                <a style="font-size: small;" data-characteristic="trait" data-action="add" data-type="bad">
                    <i class="fas fa-square-plus"></i>
                </a>
                {{/if}}
            </h3>

            <ul id="badTraitsContainer">
                {{#each actor.system.tracos.ruins as |item index|}}
                <li style="display: flex;" data-item-index="{{index}}">
                    <label style="flex: 1;">{{item.name}}</label>
                    {{#if @root.editable}}
                    <a data-action="edit" data-characteristic="trait" data-type="bad" style="margin-inline: 4px;">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a data-action="remove" data-characteristic="trait" data-type="bad" style="margin-inline: 4px;">
                        <i class="fas fa-trash"></i>
                    </a>
                    {{else}}
                    <a data-action="chat" data-characteristic="trait" data-type="bad" style="margin-inline: 4px;">
                        <i class="fas fa-message-quote"></i>
                    </a>
                    <a data-action="view" data-characteristic="trait" data-type="bad" style="margin-inline: 4px;">
                        <i class="fas fa-eye"></i>
                    </a>
                    {{/if}}
                </li>
                {{/each}}
            </ul>
        </div>
    </section>

</section>