<section data-label="Status" class="S0-page">
        <h2> {{localize 'S0.Virtudes'}} </h2>
        <section>
        </section>

        <h2> {{localize 'S0.Situacao'}} </h2>
        <section>
        </section>

        <h2>
                {{localize 'S0.Efeitos_Ativos'}}
                <a style="font-size: small;" data-action="view" data-characteristic="effects">
                        <i class="fas fa-eye" style="margin-right: 4px;"></i>
                </a>
                {{#if canEdit}}
                <a style="font-size: small;" data-action="check" data-characteristic="effects">
                        <i class="fas fa-refresh" style="margin-right: 4px;"></i>
                </a>
                <a style="font-size: small;" data-action="remove" data-characteristic="effects" data-type="all">
                        <i class="fas fa-trash" style="margin-right: 4px;"></i>
                </a>
                {{/if}}
        </h2>
        <section>
                <ul style="margin: 0px;">
                        {{#each effects as |item index|}}
                        <li style="margin-block: 3px;">
                                <strong>{{ item.description }}</strong>: {{ item.name }}
                                <a data-action="remove" data-characteristic="effects" data-type="single"
                                        data-item-index="{{ index }}">
                                        <i class="fas fa-remove" style="margin-right: 4px;"></i>
                                </a>
                        </li>
                        {{/each}}
                </ul>
        </section>

</section>